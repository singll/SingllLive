[bilibili]
; B站直播间号 (数字)
room_id = 0
; 你的B站UID (用于PK权限校验)
uid = 0
; 浏览器 F12 -> Application -> Cookies 获取以下三个值
sessdata =
bili_jct =
buvid3 =

[obs]
; OBS WebSocket v5 配置
; OBS Studio 28+ 内置 WebSocket 服务器
; 开启方法: OBS → 工具 → WebSocket服务器设置 → 启用
host = localhost
port = 4455
; WebSocket 密码 (在 OBS WebSocket 设置中查看/修改)
password =
; AScreen 场景名称 (包含 VLC 源和直播画面源的场景)
scene_name = AScreen
; VLC 视频源名称 (OBS 中 VLC 源的名称)
vlc_source = vlc_player
; 直播画面源名称
broadcast_source = broadcast_screen
; B区面板图像源名称
panel_source = B区-终端面板

[paths]
; 歌曲库目录 (弹幕点歌时搜索这个目录下的音乐文件)
song_dir = D:\live\songs
; 录像目录 (录像模式时循环播放的直播画面/视频，不是歌曲)
playback_dir = D:\live\broadcast
; 录播目录 (回放模式，文件名格式: YYYYMMDDNN.mp4，如 2026013101.mp4)
replay_dir = D:\live\replay
; 运行时数据目录 (自动创建)
data_dir = D:\live\data
; 底部滚动字幕内容
ticker_text = 欢迎来到程序员的深夜电台 ~ 发「点歌 歌名」即可点歌 ~ 感谢关注~

[panel]
; 面板尺寸 (匹配 OBS 中 B区大小)
width = 520
height = 435
; 面板刷新间隔 (秒)
refresh_interval = 1

[pk]
; PK 目标直播间号 (0 表示禁用)
target_room_id = 0
